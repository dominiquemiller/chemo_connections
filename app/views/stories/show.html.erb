
<p>
<h3><strong>Title:</strong></h3>
<h3><%= @story.title %></h3>
</p>

<p>
<h3><strong>Description:</strong></h3>
<h3><%= @story.description %></h3>
</p>

<h2>Comments</h2>
<% @story.reviews.each do |review| %>
  <p>
    <h3><strong>Commentor:</strong></h3>
  <h3><%= review.reviewer %></h3>
  </p>

  <p>
    <h3><strong>Comment: </strong></h3>
      <h3><%= review.body %></h3>
  </p>
<% end %>


<h2>Add a Comment:</h2>

<%= form_for([@story, @story.reviews.build]) do |f| %>

  <p>
    <%= f.label :reviewer %><br>
    <%= f.text_field :reviewer %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>




<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
