<div class="container">
  <div class="page-header">
    <h1 class="text-center"><%= @photo.title %><h1>
  </div>
</div>

<div class="container">
 <div class="row">
    <div class="col-md-4">
        <h2><small><%= @photo.description %><small></h2>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-6">
      <p>
        <%= image_tag(@photo.picture_url, :width => 600) if @photo.picture.present? %>
      </p>
    </div>
  </div>
</div>

<div class="container">
  <div class="page-header">
    <h2 class="text-center">Comments</h2>
  </div>
</div>

<div class="container text-center">
  <% @photo.comments.each do |comment| %>

      <h3><%= comment.commenter %> :<small><%= comment.body %></small></h4>

  <% end %>
</div>

<div class="container">
  <div class="col-nd-4">
    <h2>Add a comment:</h2>
    <%= form_for([@photo, @photo.comments.build]) do |f| %>
      <p>
        <h4><%= f.label :commenter %></h4><br>
        <%= f.text_field :commenter %>
      </p>
      <p>
        <h4><%= f.label :body %></h4><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>



<h3><%= link_to 'Edit', edit_photo_path(@photo) %> |
<%= link_to 'Back', photos_path %></h3>
