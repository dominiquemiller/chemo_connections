
<div class="row">
  <h1 class="text-center">Connect to others with your stories.</h1>
</div>

  <h3><%= link_to 'New Story', new_photo_path %></h3>


<div class="container story_pics">
  <% @photos.in_groups_of(4) do |group| %>
    <div class="row">
      <% group.compact.each do |photo| %>
        <div class="col-md-3">
          <%= link_to image_tag(photo.picture, :size => '200x200',class:"img-responsive"), photo%>

        </div>
      <% end %>
    </div>
  <% end %>
</div>
