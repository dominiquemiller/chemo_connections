<% @photos.in_groups_of(4) do |group| %>
  <div class="row">
    <% group.compact.each do |photo| %>
      <div class="col-xs-3 text-center">
        <%= image_tag photo.picture, :size => '200x200' if photo.picture.present?%>
        <h4><%= link_to photo.title, photo %></h4>
        <%= photo.description %>
      </div>
    <% end %>
  </div>
<% end %>


