
<div class="row">
  <h1 class="text-center">Upcoming Events</h1>
</div>

<div class="row">
        <div class="container">
          <div class="col-md-3">
            <form>
              <legend>Search by city</legend>
                <input id="search" type="text" class="form-control" value="<%= params[:keyword] %>" name="keyword" placeholder="keyword">
            </form>
          </div>
        </div>
      </div>


<h3><%= link_to 'New Event', new_event_path %></h3>
<div class="row events-margin">
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><h4><%= link_to 'More Info', event %></h4></td>
        <td><h4><%= link_to 'Edit', edit_event_path(event) %></h4></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
