
<div class="row">
  <h1 class="text-center">Upcoming Events</h1>
</div>

<h4><%= link_to 'New Event', new_event_path %></h4>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'More Info', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
